generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum BusinessStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String    @id @default(cuid())
  stackId       String    @unique // Stack Auth user ID
  email         String    @unique
  name          String?
  image         String?
  role          Role      @default(USER)
  businesses    Business[]
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Business {
  id          String   @id @default(uuid())
  name        String
  category    String
  district    String
  address     String
  description String
  phone       String?
  website     String?
  rating      String   @default("üëç")
  lat         Float
  lng         Float
  imageUrl    String?
  
  status      BusinessStatus @default(PENDING)
  ownerId     String?
  owner       User?          @relation(fields: [ownerId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model activeUser {
  id        String   @id
  lastPing  DateTime @default(now())
}
